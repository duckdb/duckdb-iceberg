# name: test/sql/local/irc_any_catalog/insert/partitions/schema_evolution/test_partition_schema_change.test
# description: Test changing partition schema multiple times and inserting after each change
# group: [schema_evolution]

require-env ICEBERG_SERVER_AVAILABLE

require avro

require parquet

require iceberg

require httpfs

# Do not ignore 'HTTP' error messages!
set ignore_error_messages

statement ok
create schema if not exists my_datalake.default;

statement ok
drop table if exists my_datalake.default.test_partition_schema_change;

# Create table partitioned by column a
statement ok
CREATE TABLE my_datalake.default.test_partition_schema_change (a int, b int, ts TIMESTAMP)
PARTITIONED BY (a);

# Insert with partition spec #1 (partitioned by a)
statement ok
insert into my_datalake.default.test_partition_schema_change
select range % 3, range, make_timestamp(2020, 6, 15, 12, 0, 0)
from range(30);

query I
select count(*) from my_datalake.default.test_partition_schema_change;
----
30

# Change partition schema to partition by b
statement ok
ALTER TABLE my_datalake.default.test_partition_schema_change SET PARTITIONED BY (b);

# Insert with partition spec #2 (partitioned by b)
statement ok
insert into my_datalake.default.test_partition_schema_change
select range % 3, 100 + range, make_timestamp(2021, 6, 15, 12, 0, 0)
from range(20);

query I
select count(*) from my_datalake.default.test_partition_schema_change;
----
50

# Change partition schema again to partition by year(ts)
statement ok
ALTER TABLE my_datalake.default.test_partition_schema_change SET PARTITIONED BY (year(ts));

# Insert with partition spec #3 (partitioned by year(ts))
statement ok
insert into my_datalake.default.test_partition_schema_change
select range % 3, 200 + range, make_timestamp(2022, (range % 12) + 1, 15, 12, 0, 0)
from range(20);

# Total should be 30 + 20 + 20 = 70
query I
select count(*) from my_datalake.default.test_partition_schema_change;
----
70

# All data should be readable regardless of which partition spec was active at insert time
statement ok
create table local_schema_change as
select range % 3 as a, range as b, make_timestamp(2020, 6, 15, 12, 0, 0) as ts from range(30)
union all
select range % 3, 100 + range, make_timestamp(2021, 6, 15, 12, 0, 0) from range(20)
union all
select range % 3, 200 + range, make_timestamp(2022, (range % 12) + 1, 15, 12, 0, 0) from range(20);

query III nosort expected_result
select * from local_schema_change order by b;
----

query III nosort expected_result
select * from my_datalake.default.test_partition_schema_change order by b;
----
