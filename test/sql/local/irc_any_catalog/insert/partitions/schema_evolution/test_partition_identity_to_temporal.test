# name: test/sql/local/irc/insert/partitions/schema_evolution/test_partition_identity_to_temporal.test
# description: Test evolving from identity partition to temporal partition and back
# group: [schema_evolution]

require-env ICEBERG_SERVER_AVAILABLE

require avro

require parquet

require iceberg

require httpfs

# Do not ignore 'HTTP' error messages!
set ignore_error_messages

statement ok
create schema if not exists my_datalake.default;

statement ok
drop table if exists my_datalake.default.test_identity_to_temporal;

# Start with identity partition on ts
statement ok
CREATE TABLE my_datalake.default.test_identity_to_temporal (id int, ts TIMESTAMP)
PARTITIONED BY (ts);

# Insert with identity partition
statement ok
insert into my_datalake.default.test_identity_to_temporal
select range, make_timestamp(2020, 1, (range % 5) + 1, 12, 0, 0)
from range(10);

query I
select count(*) from my_datalake.default.test_identity_to_temporal;
----
10

# Evolve to year partition
statement ok
ALTER TABLE my_datalake.default.test_identity_to_temporal SET PARTITIONED BY (year(ts));

# Insert with year partition
statement ok
insert into my_datalake.default.test_identity_to_temporal
select 100 + range, make_timestamp(2021, (range % 12) + 1, 15, 12, 0, 0)
from range(10);

query I
select count(*) from my_datalake.default.test_identity_to_temporal;
----
20

# Evolve to month partition
statement ok
ALTER TABLE my_datalake.default.test_identity_to_temporal SET PARTITIONED BY (month(ts));

# Insert with month partition
statement ok
insert into my_datalake.default.test_identity_to_temporal
select 200 + range, make_timestamp(2022, (range % 6) + 1, 15, 12, 0, 0)
from range(10);

query I
select count(*) from my_datalake.default.test_identity_to_temporal;
----
30

# Evolve to day partition
statement ok
ALTER TABLE my_datalake.default.test_identity_to_temporal SET PARTITIONED BY (day(ts));

# Insert with day partition
statement ok
insert into my_datalake.default.test_identity_to_temporal
select 300 + range, make_timestamp(2023, 3, (range % 10) + 1, 12, 0, 0)
from range(10);

query I
select count(*) from my_datalake.default.test_identity_to_temporal;
----
40

# Revert back to identity partition
statement ok
ALTER TABLE my_datalake.default.test_identity_to_temporal SET PARTITIONED BY (ts);

# Insert with identity partition again
statement ok
insert into my_datalake.default.test_identity_to_temporal
select 400 + range, make_timestamp(2024, 7, (range % 3) + 1, 12, 0, 0)
from range(10);

# Total: 10 + 10 + 10 + 10 + 10 = 50
query I
select count(*) from my_datalake.default.test_identity_to_temporal;
----
50

# Verify correctness
statement ok
create table local_ident_temporal as
select range as id, make_timestamp(2020, 1, (range % 5) + 1, 12, 0, 0) as ts from range(10)
union all
select 100 + range, make_timestamp(2021, (range % 12) + 1, 15, 12, 0, 0) from range(10)
union all
select 200 + range, make_timestamp(2022, (range % 6) + 1, 15, 12, 0, 0) from range(10)
union all
select 300 + range, make_timestamp(2023, 3, (range % 10) + 1, 12, 0, 0) from range(10)
union all
select 400 + range, make_timestamp(2024, 7, (range % 3) + 1, 12, 0, 0) from range(10);

query II nosort expected_result
select * from local_ident_temporal order by id;
----

query II nosort expected_result
select * from my_datalake.default.test_identity_to_temporal order by id;
----
