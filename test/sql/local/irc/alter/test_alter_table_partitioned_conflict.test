# name: test/sql/local/irc/alter/test_alter_table_partitioned_conflict.test
# group: [alter]

require-env ICEBERG_SERVER_AVAILABLE

require avro

require parquet

require iceberg

require httpfs

# Do not ignore 'HTTP' error messages!
set ignore_error_messages

statement ok
CREATE SECRET (
    TYPE S3,
    KEY_ID 'admin',
    SECRET 'password',
    ENDPOINT '127.0.0.1:9000',
    URL_STYLE 'path',
    USE_SSL 0
);

statement ok
ATTACH '' AS my_datalake (
    TYPE ICEBERG,
    CLIENT_ID 'admin',
    CLIENT_SECRET 'password',
    ENDPOINT 'http://127.0.0.1:8181'
);

statement ok
drop table if exists my_datalake.default.alter_table_conflict;

statement ok
CREATE TABLE my_datalake.default.alter_table_conflict AS (select range a, range%2 b, range%4 c FROM range(10));

statement ok con1
begin;

statement ok con2
begin;

# con2 alters the partition
statement ok con2
Alter table my_datalake.default.alter_table_conflict SET PARTITIONED BY (b);

statement ok con2
commit;

statement ok con1
Alter table my_datalake.default.alter_table_conflict SET PARTITIONED BY (a);

# con1 should error since the partition spec id has updated before con1 could commit;
statement error con1
commit;
