# name: test/sql/local/irc/insert/partitions/identity/test_identity_date.test
# group: [identity]

require-env ICEBERG_SERVER_AVAILABLE

require avro

require parquet

require iceberg

require httpfs

# Do not ignore 'HTTP' error messages!
set ignore_error_messages

statement ok
CREATE SECRET (
    TYPE S3,
    KEY_ID 'admin',
    SECRET 'password',
    ENDPOINT '127.0.0.1:9000',
    URL_STYLE 'path',
    USE_SSL 0
);

statement ok
ATTACH '' AS my_datalake (
    TYPE ICEBERG,
    CLIENT_ID 'admin',
    CLIENT_SECRET 'password',
    ENDPOINT 'http://127.0.0.1:8181'
);

statement ok
create schema if not exists my_datalake.default;

statement ok
drop table if exists my_datalake.default.test_identity_date;

statement ok
CREATE TABLE my_datalake.default.test_identity_date (id int, dt DATE)
PARTITIONED BY (dt);

statement ok
insert into my_datalake.default.test_identity_date
select range, ('2020-01-01'::DATE + interval (range % 5) day)::DATE
from range(25);

statement ok
create table local_identity_date as
select range as id, ('2020-01-01'::DATE + interval (range % 5) day)::DATE as dt
from range(25);

query II nosort expected_result
select * from local_identity_date order by id;
----

query II nosort expected_result
select * from my_datalake.default.test_identity_date order by id;
----

# Filter on partition column
query I
select count(*) from my_datalake.default.test_identity_date where dt = '2020-01-01'::DATE;
----
5
