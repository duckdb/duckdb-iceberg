# name: test/sql/local/irc/table_properties/test_set_table_properties.test
# group: [table_properties]

require-env ICEBERG_SERVER_AVAILABLE

require avro

require parquet

require iceberg

require httpfs

statement ok
CALL enable_logging('HTTP');

statement ok
set logging_level='debug';

statement ok
CREATE SECRET (
    TYPE S3,
    KEY_ID 'admin',
    SECRET 'password',
    ENDPOINT '127.0.0.1:9000',
    URL_STYLE 'path',
    USE_SSL 0
);


statement ok
ATTACH '' AS my_datalake (
    TYPE ICEBERG,
    CLIENT_ID 'admin',
    CLIENT_SECRET 'password',
    ENDPOINT 'http://127.0.0.1:8181'
);

statement ok
drop table if exists my_datalake.default.test;

statement ok
create table if not exists my_datalake.default.test as select range a from range(100);

statement ok
CALL set_iceberg_table_properties(my_datalake.default.test,
       MAP {
        'write.update.mode' : 'copy-on-write',
        'foo' : 'buzz',
        'page-write-size': '10000'
        });

# test deleting table properties
statement ok
CALL remove_iceberg_table_properties(my_datalake.default.test,
        ['foo']);

query II
select * from iceberg_table_properties(my_datalake.default.test);
----
write.update.mode	copy-on-write
page-write-size	10000


# table property is copy-on-write, so there is an error
statement error
delete from my_datalake.default.test where a %2 = 0;
----
<REGEX>:.*Not implemented Error.*

# set the table property to merge on read
statement ok
CALL set_iceberg_table_properties(my_datalake.default.test,
       MAP {
        'write.update.mode' : 'merge-on-read',
        });

# table property is now merge on read, so there is no error
statement ok
delete from my_datalake.default.test where a %2 = 0;

query I
select count(*) from my_datalake.default.test;
----
50

query II
select * from iceberg_table_properties(my_datalake.default.test_table_properties) where "key" not in ('created-at', 'owner');;
----
read.split.target-size	268435456
write.parquet.compression-codec	zstd
duckdb_man	superman
write.delete.mode	merge-on-read
another1	neato


mode skip


statement ok
CALL set_iceberg_table_properties(my_datalake.default.table_unpartitioned, 'write.update.mode=copy-on-write')

