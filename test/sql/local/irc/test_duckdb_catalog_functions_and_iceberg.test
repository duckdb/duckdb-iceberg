require-env ICEBERG_SERVER_AVAILABLE

require avro

require parquet

require iceberg

require httpfs

statement ok
CALL enable_logging('HTTP');

statement ok
set logging_level='debug';

statement ok
CREATE SECRET (
    TYPE S3,
    KEY_ID 'admin',
    SECRET 'password',
    ENDPOINT '127.0.0.1:9000',
    URL_STYLE 'path',
    USE_SSL 0
);


statement ok
ATTACH '' AS my_datalake (
    TYPE ICEBERG,
    CLIENT_ID 'admin',
    CLIENT_SECRET 'password',
    ENDPOINT 'http://127.0.0.1:8181'
);

statement ok
use my_datalake.default;

# one for the token, one for config endpoint, one for use call
query I
select count(*) from duckdb_logs_parsed('HTTP');
----
3

# three previous
# one to lookup schema main, and one to lookup schema 'default' again.
query I
select count(*) from duckdb_logs_parsed('HTTP');
----
5

statement ok
use memory;

# 3 more requests are made,
# 2 from previous duckdb_logs_parsed call for 'main', 'default',
# and 1 for 'memory'
# requests no longer go up
query I
select count(*) from duckdb_logs_parsed('HTTP');
