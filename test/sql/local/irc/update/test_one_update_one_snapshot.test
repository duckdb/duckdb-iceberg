# name: test/sql/local/irc/update/test_one_update_one_snapshot.test
# description: Test ducklake updates
# group: [update]

require-env ICEBERG_SERVER_AVAILABLE

require avro

require parquet

require iceberg

require httpfs

# Do not ignore 'HTTP' error messages!
set ignore_error_messages

statement ok
CALL enable_logging('HTTP');

statement ok
set logging_level='debug'

statement ok
CREATE SECRET (
    TYPE S3,
    KEY_ID 'admin',
    SECRET 'password',
    ENDPOINT '127.0.0.1:9000',
    URL_STYLE 'path',
    USE_SSL 0
);


statement ok
ATTACH '' AS my_datalake (
    TYPE ICEBERG,
    CLIENT_ID 'admin',
    CLIENT_SECRET 'password',
    ENDPOINT 'http://127.0.0.1:8181'
);

statement ok
DROP TABLE IF EXISTS my_datalake.default.test;

statement ok
CREATE TABLE my_datalake.default.test AS SELECT range a from range(10);

query I
select count(*) from iceberg_snapshots(my_datalake.default.test);
----
1

statement ok
update my_datalake.default.test set a = 100 where a %2 = 0;

query I
select * from my_datalake.default.test order by a;
----
1
3
5
7
9
100
100
100
100
100

query I
select count(*) from iceberg_snapshots(my_datalake.default.test);
----
2


