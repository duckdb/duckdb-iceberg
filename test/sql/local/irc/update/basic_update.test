require-env ICEBERG_SERVER_AVAILABLE

require avro

require parquet

require iceberg

require httpfs

# Do not ignore 'HTTP' error messages!
set ignore_error_messages

statement ok
CALL enable_logging('HTTP');

statement ok
set logging_level='debug'

statement ok
CREATE SECRET (
    TYPE S3,
    KEY_ID 'admin',
    SECRET 'password',
    ENDPOINT '127.0.0.1:9000',
    URL_STYLE 'path',
    USE_SSL 0
);


statement ok
ATTACH '' AS my_datalake (
    TYPE ICEBERG,
    CLIENT_ID 'admin',
    CLIENT_SECRET 'password',
    ENDPOINT 'http://127.0.0.1:8181'
);

statement ok
DROP TABLE IF EXISTS my_datalake.default.test;

statement ok
CREATE TABLE my_datalake.default.test AS SELECT 1000 + i id, i % 10 as val FROM range(1000) t(i);

statement ok
BEGIN

query III
SELECT COUNT(*), SUM(id), SUM(val) FROM my_datalake.default.test
----
1000	1499500	4500

query I
UPDATE my_datalake.default.test SET id=id+2 WHERE id%2=0
----
500

query III
SELECT COUNT(*), SUM(id), SUM(val) FROM my_datalake.default.test
----
1000	1500500	4500

statement ok
COMMIT

query III
SELECT COUNT(*), SUM(id), SUM(val) FROM my_datalake.default.test
----
1000	1500500	4500

