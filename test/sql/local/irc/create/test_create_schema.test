# name: test/sql/local/irc/create/test_create_schema.test
# description: test integration with iceberg catalog read
# group: [create]

require-env ICEBERG_SERVER_AVAILABLE

require avro

require parquet

require iceberg

require httpfs

# Do not ignore 'HTTP' error messages!
set ignore_error_messages

statement ok
pragma enable_logging('HTTP');

statement ok
set logging_level='debug'

statement ok
CREATE SECRET (
    TYPE S3,
    KEY_ID 'admin',
    SECRET 'password',
    ENDPOINT '127.0.0.1:9000',
    URL_STYLE 'path',
    USE_SSL 0
);


statement ok
ATTACH '' AS my_datalake (
    TYPE ICEBERG,
    CLIENT_ID 'admin',
    CLIENT_SECRET 'password',
    ENDPOINT 'http://127.0.0.1:8181'
);


# create non-existent schema
statement ok
create schema my_datalake.new_schema;

# create schema if not exists does not throw error
statement ok
create schema if not exists my_datalake.new_schema;

# drop schema if exists does not throw error if schema does not exist
statement ok
drop schema if exists my_datalake.non_existent_schema;

# drop newly created schema
statement ok
drop schema my_datalake.new_schema;